{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des évènements</h1>

    {#<ul>#}
        {#<li>#}
            {#<a href="{{ path('event_new') }}">Créer un nouvel évènement</a>#}
        {#</li>#}
    {#</ul>#}
    {#<button type="button" class="btn btn-primary" data-toggle="modal"#}
            {#data-target=".bs-example-modal-lg">Nouvel évènement#}
    {#</button>#}
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
        Nouvel évènement
    </button>

    {{ render(controller('EHSBundle:Event:new')) }}
    {% block newEvent %}
    {% endblock %}

    <table width="100%" class="table display" id="events" cellspacing="0">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Présentation</th>
                <th>Date et heure de début</th>
                <th>Date et heure de fin</th>
                <th>Nombre de place</th>
                <th>Information complémentaire</th>
                <th>Archivé</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.title }}</td>
                <td>{{ event.presentation }}</td>
                <td>{% if event.startDate %}{{ event.startDate|date('d-m-Y H:i:s') }}{% endif %}</td>
                <td>{% if event.endDate %}{{ event.endDate|date('d-m-Y H:i:s') }}{% endif %}</td>
                <td>{{ event.placeNumber }}</td>
                <td>{{ event.addInfo }}</td>
                <td>{% if event.archived %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        {#<li>#}
                            {#<a href="{{ path('event_show', { 'id': event.id }) }}">détail</a>#}
                        {#</li>#}
                        <li>
                            <a href="{{ path('event_edit', { 'id': event.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
