{% extends 'base.html.twig' %}

{% block body %}
    <section id="one" class="wrapper style1">
        <div class="inner">
            {% for event in events %}
                {% set feature= "feature left" %}
                {% if loop.index % 2 ==0 %}
                    {% set feature= "feature right" %}
                {% endif %}

                <article class="{{ feature }}">
                    {% set image = event.getImages()|first %}
                    {% if image %}
                        <span class="image"><img src="{{ asset('uploads/images/'~image.getId()~'.'~image.getExtension()) }}"
                                                 alt="{{ image.getOriginalName() }}" /></span>
                    {% endif %}
                    <div class="content">
                        <h2>{{ event.getTitle() }}</h2>
                        <p>{{ event.getPresentation }}</p>
                        <ul class="actions">
                            <li>
                                <a href="{{ path('event_show', {'id': event.id}) }}" class="button alt">Voir le dÃ©tail</a>
                            </li>
                        </ul>
                    </div>
                </article>
            {% endfor %}
        </div>
    </section>
{% endblock %}