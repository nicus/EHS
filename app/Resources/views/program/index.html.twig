{% extends 'base.html.twig' %}

{% block body %}
    <h1>Programs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Program</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td><a href="{{ path('program_show', { 'id': program.id }) }}">{{ program.id }}</a></td>
                <td>{{ program.program }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('program_show', { 'id': program.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('program_edit', { 'id': program.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('program_new') }}">Create a new program</a>
        </li>
    </ul>
{% endblock %}
